doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      div
        a(href="/") 
          h1.logo-text MembersOnly
      nav
        ul.nav-links
          if (!currentUser)
            li
              a(href="/users/login") Log In
            li
              a(href="/users/signup") Sign Up
          else
            li
              a(href="/messages/create") Post New Message
            if !currentUser.isMember
              li
                a(href="/users/membership") Become a Member
            else if !currentUser.isAdmin
              li 
                a(href="/users/admin") Become an Admin    
            li
              a(href="/users/logout") Log Out
    block content
